<% form_for @message do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :startdate %><br />
    <%= f.datetime_select :startdate %>
  </p>
  <p>
    <%= f.label :enddate %><br />
    <%= f.datetime_select :enddate %>
  </p>
  <p>
    <%= f.label :persistent, "Always Display Message?" %><br />
    <%= f.check_box :persistent %>
  </p> 
  <p><%= f.submit %></p>
<% end %>
